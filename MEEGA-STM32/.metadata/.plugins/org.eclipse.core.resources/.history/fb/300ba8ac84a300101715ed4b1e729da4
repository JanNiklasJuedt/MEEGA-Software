/* USER CODE END Header */
/* Includes ------------------------------------------------------------------*/
#include "main.h"

/* Private includes ----------------------------------------------------------*/
/* USER CODE BEGIN Includes */
#include <stdio.h>
#include <stdint.h>
/* USER CODE END Includes */

/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */

/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
SPI_HandleTypeDef hspi1;
SPI_HandleTypeDef hspi2;

/* USER CODE BEGIN PV */
uint8_t rxBuf16[2] = {0};
uint8_t rxBuf24[3] = {0};
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_SPI1_Init(void);
static void MX_SPI2_Init(void);
/* USER CODE BEGIN PFP */
uint16_t Sensors16bits(uint8_t high,uint8_t low) {
	return (high << 8) | low;
}

uint32_t Sensors24bits(uint8_t high, uint8_t middle, uint8_t low) {
	return ((uint32_t)high << 16) | ((uint32_t)middle << 8) | low;
}
/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */

/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_SPI1_Init();
  MX_SPI2_Init();
  /* USER CODE BEGIN 2 */
  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_3 | GPIO_PIN_4 | GPIO_PIN_5 | GPIO_PIN_6 | GPIO_PIN_7 | GPIO_PIN_8, GPIO_PIN_SET);
  HAL_GPIO_TogglePin(GPIOA, GPIO_PIN_8);
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
	  uint16_t TPR280_Ambient, PT5494_Analog;
	  uint32_t P0_SPI, P1_SPI, P2_SPI, P3_SPI;
	  float Vref = 3.3;
	  float res16bit = 65536.0, res24bit = 16777216.0;

	  HAL_GPIO_TogglePin(GPIOA, GPIO_PIN_11);

	  //CS1 12bit - TPR ADC Ambient 12bit
	  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_3, GPIO_PIN_RESET);	//CS LOW to start communication
	  HAL_SPI_Receive(&hspi1, rxBuf16, 2, HAL_MAX_DELAY);	//read data
	  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_3, GPIO_PIN_SET);		//CS HIGH to end communication
	  TPR280_Ambient = Sensors16bits(rxBuf16[0], rxBuf16[1]); //RAW Output
	  float V_OutTPR = ((float)TPR280_Ambient / res16bit) * Vref;
	  float Vmax_OutTPR = 8.5, Vmin_OutTPR = 1.5;
	  float V_Out_ReadTPR = V_OutTPR * ((Vmax_OutTPR - Vmin_OutTPR) / Vref) + Vmin_OutTPR;
	  float V_EffTPR = V_Out_ReadTPR - Vmin_OutTPR;
	  float pmax_tpr = 1000000; //SHOULD CALIBRATE TO KNOW MAX AND MIN PRESSURE, 0-10bar Range is only REFERENCE--------------------CALIBRATE--------------------
	  float Ambient_Pressure = pmax_tpr * V_EffTPR / (Vmax_OutTPR - Vmin_OutTPR); //in Pa

	  //CS2 12bit - PT5414 ADC Hyd Acc Pressure Transmitter -14,5 until 145 psi
	  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_4, GPIO_PIN_RESET);
	  HAL_SPI_Receive(&hspi1, rxBuf16, 2, HAL_MAX_DELAY);
	  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_4, GPIO_PIN_SET);
	  PT5494_Analog = Sensors16bits(rxBuf16[0], rxBuf16[1]); //RAW Output
	  float V_OutPTch = ((float)PT5494_Analog / res16bit) * Vref;
	  float Vmax_OutPTch = 165*20/1000, Vmin_OutPTch = 165*4/1000; //R52 = 165 Ohm, PT5414 Output = 4 - 20mA
	  float V_Out_ReadPTch = V_OutPTch * ((Vmax_OutPTch - Vmin_OutPTch) / Vref) + Vmin_OutPTch;
	  float V_EffPTch = V_Out_ReadPTch - Vmin_OutPTch;
	  float pmax_pt = 1000000.0, pmin_pt = -100000.0; //in Pa - mpr sensor -100-1000kPa
	  float Chamber_Pressure = V_EffPTch / (Vmax_OutPTch - Vmin_OutPTch) * (pmax_pt - pmin_pt) + pmin_pt; //in Pa

	  //SPI Sensors
	  float pmax_mpr = 172369.0; //in Pa - mpr sensor 0-25psi
	  //CS3 24bit - MPRLS Pressure Sensor SPI 0 - 25 psi
	  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_5, GPIO_PIN_RESET);
	  HAL_SPI_Receive(&hspi1, rxBuf24, 3, HAL_MAX_DELAY);
	  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_5, GPIO_PIN_SET);
	  P0_SPI = Sensors24bits(rxBuf24[0], rxBuf24[1], rxBuf24[2]); //RAW Output
	  float P0_Pressure = ((float)P0_SPI / res24bit) * pmax_mpr; //in Pa

	  //CS4 24bit - MPRLS Pressure Sensor SPI 0 - 25 psi
	  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_6, GPIO_PIN_RESET);
	  HAL_SPI_Receive(&hspi1, rxBuf24, 3, HAL_MAX_DELAY);
	  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_6, GPIO_PIN_SET);
	  P1_SPI = Sensors24bits(rxBuf24[0], rxBuf24[1], rxBuf24[2]); //RAW Output

	  //CS5 24bit - MPRLS Pressure Sensor SPI 0 - 25 psi
	  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_7, GPIO_PIN_RESET);
	  HAL_SPI_Receive(&hspi1, rxBuf24, 3, HAL_MAX_DELAY);
	  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_7, GPIO_PIN_SET);
	  P2_SPI = Sensors24bits(rxBuf24[0], rxBuf24[1], rxBuf24[2]); //RAW Output

	  //CS6 24bit - MPRLS Pressure Sensor SPI 0 - 25 psi
	  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_8, GPIO_PIN_RESET);
	  HAL_SPI_Receive(&hspi1, rxBuf24, 3, HAL_MAX_DELAY);
	  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_8, GPIO_PIN_SET);
	  P3_SPI = Sensors24bits(rxBuf24[0], rxBuf24[1], rxBuf24[2]); //RAW Output

	  HAL_Delay(500);

	  //Temporary remove Warnings
	  (void)Ambient_Pressure;
	  (void)Chamber_Pressure;
	  (void)P0_Pressure;
	  (void)P1_SPI;
	  (void)P2_SPI;
	  (void)P3_SPI;
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  HAL_PWREx_ControlVoltageScaling(PWR_REGULATOR_VOLTAGE_SCALE1);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSIDiv = RCC_HSI_DIV1;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_NONE;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_HSI;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_0) != HAL_OK)
  {
    Error_Handler();
  }
}

