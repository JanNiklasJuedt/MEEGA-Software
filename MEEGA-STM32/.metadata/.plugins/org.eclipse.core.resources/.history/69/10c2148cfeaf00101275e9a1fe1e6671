/* USER CODE END Header */
/* Includes ------------------------------------------------------------------*/
#include "main.h"

/* Private includes ----------------------------------------------------------*/
/* USER CODE BEGIN Includes */
#include <stm32g0xx_hal.h>
#include <stdint.h>
#include <string.h>
/* USER CODE END Includes */

/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */

/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
SPI_HandleTypeDef hspi1;
SPI_HandleTypeDef hspi2;

/* USER CODE BEGIN PV */
#define LEDs_PORT GPIOA
#define LED1 GPIO_PIN_8
#define LED2 GPIO_PIN_11

#define CS_RPi_PORT GPIOB
#define CS_RPi_PIN GPIO_PIN_1

#define CS_SENSORS_PORT GPIOB
#define CS_TAcc_PIN GPIO_PIN_3
#define CS_T0_PIN GPIO_PIN_4
#define CS_T1_PIN GPIO_PIN_5
#define CS_T2_PIN GPIO_PIN_6
#define CS_T3_PIN GPIO_PIN_7
#define CS_PT100_PIN GPIO_PIN_8

//CMD from RPi to read sensors data
#define CMD_READ 0xA1

//Transfer length
#define TxPACKET_LENGTH 18 //3 bytes from 24bit ---- CHANGE if needed
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_SPI1_Init(void);
static void MX_SPI2_Init(void);
/* USER CODE BEGIN PFP */
uint32_t Sensors24bits(uint8_t high, uint8_t middle, uint8_t low) {
	return ((uint32_t)high << 16) | ((uint32_t)middle << 8) | low;
}

static uint8_t rxBuf24[3];

static uint8_t txPacket[TxPACKET_LENGTH];
static uint8_t txLatest[TxPACKET_LENGTH];
static uint8_t rxCMD;

//Communication Register
static uint8_t comCMD = 0x40; //0b0100_0000 8bit Status Register During a Read Operation Tab.12
static uint8_t dataREG = 0x58; //0b0101_1000 Data Register 24bit Tab.12

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
void ADCReset(void) {
	uint8_t resetCMD[4] = {0xFF, 0xFF, 0xFF, 0xFF};
	HAL_SPI_Transmit(&hspi2, resetCMD, 4, HAL_MAX_DELAY);
	HAL_Delay(10);
}

uint8_t ADCRegister(uint16_t CS_Pin) {
	uint8_t statREG = 0x88; //Status Register
	uint32_t timeout = HAL_GetTick() + 7; //7ms Timeout CHANGEABLE
	while ((statREG & 0x80) && HAL_GetTick()<timeout) {	//0x80 mask out for checking SR7 RDY
		HAL_GPIO_WritePin(CS_SENSORS_PORT, CS_Pin, GPIO_PIN_RESET);
		HAL_SPI_Transmit(&hspi2, &comCMD, 1, HAL_MAX_DELAY);
		HAL_SPI_Receive(&hspi2, &statREG, 1, HAL_MAX_DELAY);
		HAL_GPIO_WritePin(CS_SENSORS_PORT, CS_Pin, GPIO_PIN_SET);
	}
	return ((statREG & 0x80) == 0);
}

void createtxPacket(void) {
	uint32_t T_Accumulator_ADC, T0_ADC, T1_ADC, T2_ADC, T3_ADC, PT100_ADC;

	//CS1 24bit - Accumulator Thermocouple AD7793 24bit
	if(ADCRegister(CS_TAcc_PIN)) {
		HAL_GPIO_WritePin(CS_SENSORS_PORT, CS_TAcc_PIN, GPIO_PIN_RESET);	//CS LOW to start communication pullupR
		HAL_SPI_Transmit(&hspi2, &dataREG, 1, HAL_MAX_DELAY);
		HAL_SPI_Receive(&hspi2, rxBuf24, 3, HAL_MAX_DELAY);	//read data
		HAL_GPIO_WritePin(CS_SENSORS_PORT, CS_TAcc_PIN, GPIO_PIN_SET);		//CS HIGH to end communication
		T_Accumulator_ADC = Sensors24bits(rxBuf24[0], rxBuf24[1], rxBuf24[2]); //RAW Output
	}

	//CS2 24bit - Chamber Thermocouple T0
	if(ADCRegister(CS_T0_PIN)) {
		HAL_GPIO_WritePin(CS_SENSORS_PORT, CS_T0_PIN, GPIO_PIN_RESET);
		HAL_SPI_Transmit(&hspi2, &dataREG, 1, HAL_MAX_DELAY);
		HAL_SPI_Receive(&hspi2, rxBuf24, 3, HAL_MAX_DELAY);
		HAL_GPIO_WritePin(CS_SENSORS_PORT, CS_T0_PIN, GPIO_PIN_SET);
		T0_ADC = Sensors24bits(rxBuf24[0], rxBuf24[1], rxBuf24[2]); //RAW Output
	}

	//CS3 24bit - Nozzle Throat Thermocouple T1
	if(ADCRegister(CS_T1_PIN)) {
		HAL_GPIO_WritePin(CS_SENSORS_PORT, CS_T1_PIN, GPIO_PIN_RESET);
		HAL_SPI_Transmit(&hspi2, &dataREG, 1, HAL_MAX_DELAY);
		HAL_SPI_Receive(&hspi2, rxBuf24, 3, HAL_MAX_DELAY);
		HAL_GPIO_WritePin(CS_SENSORS_PORT, CS_T1_PIN, GPIO_PIN_SET);
		T1_ADC = Sensors24bits(rxBuf24[0], rxBuf24[1], rxBuf24[2]); //RAW Output
	}

	//CS4 24bit - Nozzle Midspan Thermocouple T2
	if(ADCRegister(CS_T2_PIN)) {
		HAL_GPIO_WritePin(CS_SENSORS_PORT, CS_T2_PIN, GPIO_PIN_RESET);
		HAL_SPI_Transmit(&hspi2, &dataREG, 1, HAL_MAX_DELAY);
		HAL_SPI_Receive(&hspi2, rxBuf24, 3, HAL_MAX_DELAY);
		HAL_GPIO_WritePin(CS_SENSORS_PORT, CS_T2_PIN, GPIO_PIN_SET);
		T2_ADC = Sensors24bits(rxBuf24[0], rxBuf24[1], rxBuf24[2]); //RAW Output
	}

	//CS5 24bit - Nozzle Exit Thermocouple T3
	if(ADCRegister(CS_T3_PIN)) {
		HAL_GPIO_WritePin(CS_SENSORS_PORT, CS_T3_PIN, GPIO_PIN_RESET);
		HAL_SPI_Transmit(&hspi2, &dataREG, 1, HAL_MAX_DELAY);
		HAL_SPI_Receive(&hspi2, rxBuf24, 3, HAL_MAX_DELAY);
		HAL_GPIO_WritePin(CS_SENSORS_PORT, CS_T3_PIN, GPIO_PIN_SET);
		T3_ADC = Sensors24bits(rxBuf24[0], rxBuf24[1], rxBuf24[2]); //RAW Output
	}

	//CS6 24bit - PT100 Thermoresistor
	if(ADCRegister(CS_PT100_PIN)) {
		HAL_GPIO_WritePin(CS_SENSORS_PORT, CS_PT100_PIN, GPIO_PIN_RESET);
		HAL_SPI_Transmit(&hspi2, &dataREG, 1, HAL_MAX_DELAY);
		HAL_SPI_Receive(&hspi2, rxBuf24, 3, HAL_MAX_DELAY);
		HAL_GPIO_WritePin(CS_SENSORS_PORT, CS_PT100_PIN, GPIO_PIN_SET);
		PT100_ADC = Sensors24bits(rxBuf24[0], rxBuf24[1], rxBuf24[2]); //RAW Output
	}

	//Packing
	//TPR280 ADC 16bit
	txPacket[0] = ((T_Accumulator_ADC >> 16) & 0xFF);
	txPacket[1] = ((T_Accumulator_ADC >> 8) & 0xFF);
	txPacket[2] = (T_Accumulator_ADC & 0xFF);
	//PT6494 ADC 16bit
	txPacket[3] = ((T0_ADC >> 16) & 0xFF);
	txPacket[4] = ((T0_ADC >> 8) & 0xFF);
	txPacket[5] = (T0_ADC & 0xFF);
	//MPRLS P0 24bit
	txPacket[6] = ((T1_ADC >> 16) & 0xFF);
	txPacket[7] = ((T1_ADC >> 8) & 0xFF);
	txPacket[8] = (T1_ADC & 0xFF);
	//MPRLS P1 24bit
	txPacket[9] = ((T2_ADC >> 16) & 0xFF);
	txPacket[10] = ((T2_ADC >> 8) & 0xFF);
	txPacket[11] = (T2_ADC & 0xFF);
	//MPRLS P2 24bit
	txPacket[12] = ((T3_ADC >> 16) & 0xFF);
	txPacket[13] = ((T3_ADC >> 8) & 0xFF);
	txPacket[14] = (T3_ADC & 0xFF);
	//MPRLS P3 24bit
	txPacket[15] = ((PT100_ADC >> 16) & 0xFF);
	txPacket[16] = ((PT100_ADC >> 8) & 0xFF);
	txPacket[17] = (PT100_ADC & 0xFF);
}
/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_SPI1_Init();
  MX_SPI2_Init();
  /* USER CODE BEGIN 2 */
  HAL_GPIO_WritePin(CS_SENSORS_PORT, CS_TAcc_PIN | CS_T0_PIN | CS_T1_PIN | CS_T2_PIN | CS_T3_PIN | CS_PT100_PIN, GPIO_PIN_SET);
  HAL_GPIO_WritePin(LEDs_PORT, LED1, GPIO_PIN_SET);

  uint8_t last_UpdateTime = 0;
  const uint8_t RefreshData_Timeout = 10; //refresh every 10ms -CHANGEABLE-
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
	  HAL_GPIO_TogglePin(LEDs_PORT,LED2);

	  if(HAL_GetTick() - last_UpdateTime >= RefreshData_Timeout) {
		  createtxPacket();
		  memcpy(txLatest, txPacket, TxPACKET_LENGTH);
		  last_UpdateTime = HAL_GetTick();
	  }


	  if(HAL_GPIO_ReadPin(CS_RPi_PORT, CS_RPi_PIN) == GPIO_PIN_RESET) {
		  if(HAL_SPI_Receive(&hspi1, &rxCMD, 1, 50) == HAL_OK) { //50ms timeout maximum request period
			  if(rxCMD == CMD_READ) {
				  HAL_SPI_Transmit(&hspi1, txLatest, TxPACKET_LENGTH, HAL_MAX_DELAY);
				  HAL_Delay(1);
			  }
		  }
	  }

    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  HAL_PWREx_ControlVoltageScaling(PWR_REGULATOR_VOLTAGE_SCALE1);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSIDiv = RCC_HSI_DIV1;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_NONE;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_HSI;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_0) != HAL_OK)
  {
    Error_Handler();
  }
}

